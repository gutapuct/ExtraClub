@model Sync.Models.Bug

@{
    ViewBag.Title = "Завершение";
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
        <table>
    <tr>
        <th>
            Номер
        </th>
        <td>
            @Model.Id
        </td>
    </tr>
    <tr>
        <th>
            Автор
        </th>
        <td>
            @Model.CreatedName
        </td>
    </tr>
    <tr>
        <th>
            Дата создания
        </th>
        <td>
            @Model.CreatedOn
        </td>
    </tr>
    <tr>
        <th>
            Дата изменения статуса
        </th>
        <td>
            @Model.StatusChangedOn
        </td>
    </tr>
    <tr>
        <th>
            Категория
        </th>
        <td>
            @Model.Category
        </td>
    </tr>
    <tr>
        <th>
            Приоритет
        </th>
        <td>
            @Model.Priority
        </td>
    </tr>
    <tr>
        <th>
            Статус
        </th>
        <td>
            @Model.Status
        </td>
    </tr>
    <tr>
        <th>
            Тема
        </th>
        <td>
            @Model.Subject
        </td>
    </tr>
    <tr>
        <th>
            Текст
        </th>
        <td>
            @Html.Raw((Model.Message ?? "").Replace("\n", "<br>"))
        </td>
    </tr>
    <tr>
        <th>
            Описание решения
        </th>
        <td>
            <textarea type="text" name="Resolution" style="width: 400px; height: 100px">@Model.Resolution</textarea>
        </td>
    </tr>
</table>
    <p>
        <input type="submit" value="Завершить" />|
        @Html.ActionLink("Назад", "Index")
    </p>
}

