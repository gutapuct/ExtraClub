<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <meta name="viewport" content="width=device-width" />
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    @Styles.Render("~/Content/mobileCss", "~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/Scripts/jquery-1.7.1.js")
    <link href="~/Content/123.min.css" rel="stylesheet">
    <link href="~/Content/jquery.mobile.structure-1.3.0.min.css" rel="stylesheet">
    <link href='http://fonts.googleapis.com/css?family=PT+Sans:400,700&subset=latin,cyrillic' rel='stylesheet' type='text/css'>

    <script src="/Scripts/jquery.mobile-1.3.0.min.js"></script>

</head>
<body>
    <div data-role="page" data-theme="a">
        <div data-role="header" data-theme="a">
            @if (IsSectionDefined("Header"))
            {
                @RenderSection("Header")
            }
            else
            {
                if (ViewBag.BackActionUrl != null)
                {
                    <a href="@ViewBag.BackActionUrl" data-icon="arrow-l" >Назад</a>
                }
                
                <h1>@ViewBag.Title</h1>
                @Html.Partial("_LoginPartial")
            }
        </div>
        <div data-role="content" data-theme="b">
            @RenderBody()
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
    <script>
        $.support.cssTransitions = false;
    </script>
</body>
</html>
