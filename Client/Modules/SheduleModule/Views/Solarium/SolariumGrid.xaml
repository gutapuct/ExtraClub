        <Style x:Key="L0HorizontalStyle" TargetType="telerik:AppointmentItem">
            <Setter Property="Background" Value="{StaticResource L0Background_Normal}" />
            <Setter Property="BorderBrush" Value="{StaticResource L0Border_Normal}" />
