<usr:WindowBase x:Class="TonusClub.OrganizerModule.Views.Tasks.Windows.NewCallMaster.SelectCustomerManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                xmlns:usr="clr-namespace:TonusClub.UIControls;assembly=TonusClub.UIControls"
        xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
        Title="Выборка по параметру" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Width="400" SizeToContent="Height">
    <StackPanel>
        <ItemsControl Margin="5"
                        ItemsSource="{Binding Managers}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <CheckBox IsChecked="{Binding IsChecked}">
                        <TextBlock  Margin="0 3" Text="{Binding Path=Name}"></TextBlock>
                    </CheckBox>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
        <UniformGrid Rows="1">
            <Button Height="28" Margin="2" Click="OkButton_Click">ОК</Button>
            <Button IsCancel="True" Margin="2" Click="CancelButton_Click">Отмена</Button>
        </UniformGrid>
    </StackPanel>
</usr:WindowBase>
