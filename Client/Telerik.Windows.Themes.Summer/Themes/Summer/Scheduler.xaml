                <telerikChromes:ButtonChrome x:Name="IsTodayChrome" Style="{StaticResource SchedulerHeaderChrome}"  Visibility="{Binding Path=., Converter={StaticResource DateTimeIsTodayToVisibilityConverter}}"    Background="{StaticResource TimeSlotHeaderBackground_Today}" BorderBrush="{StaticResource OuterHeaderBorderBrush}" CornerRadius="0" />

                <Border BorderBrush="{StaticResource HorizontalHeaderInnerBorderBrush_Today}" BorderThickness="1" Margin="1" Visibility="{Binding Path=., Converter={StaticResource DateTimeIsTodayToVisibilityConverter}}"   />

