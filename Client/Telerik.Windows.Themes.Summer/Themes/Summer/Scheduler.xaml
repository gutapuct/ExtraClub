				Foreground="{StaticResource MonthWeekHeaderForegroundBrush}"
				Content="{Binding .,Converter={StaticResource TimeSlotToWeekConverter}}"
				Command="telerikScheduler:RadSchedulerCommands.SetWeekViewMode"
				 >
