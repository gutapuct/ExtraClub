											<TextBlock telerik:LocalizationManager.ResourceKey="Days" Margin="5, 10, 0, 2" VerticalAlignment="Center"/>
                                    </StackPanel>
                                    <StackPanel Grid.Row="1" Orientation="Horizontal" VerticalAlignment="Center">
                                        <RadioButton
                                            x:Name="WorkdaysRB"
                                            Grid.Row="1"
                                            GroupName="DailyGroup"
