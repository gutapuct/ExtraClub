    <DataTemplate x:Key="MonthHorizontalHeaderTemplate">
        <telerik:RadButton x:Name="Holder"
				Style="{StaticResource HorizontalHeaderButton}"
				Margin="-1 0 0 0"
				Foreground="{StaticResource MonthWeekHeaderForegroundBrush}"                
				Content="{Binding .}"
				IsEnabled="False"
				 >
        </telerik:RadButton>
        
