                            <MultiBinding Converter="{StaticResource TimeSlotToStringConverter}">
									<Binding RelativeSource="{RelativeSource AncestorType={x:Type telerikScheduler:RadScheduler}}"
											 Path="TimelineHeaderFormat" />
									<Binding />
							</MultiBinding>
							
						</TextBlock.Text>
                    </TextBlock>
                    
                </Canvas>
