    <ControlTemplate TargetType="RepeatButton" x:Key="DecreaseHandleRepeatButton">
        <Grid x:Name="Root">
            
            <Border x:Name="Border"
					CornerRadius="{StaticResource SliderHandOuterBorder_CornerRadius}"				
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="{TemplateBinding BorderThickness}"
                    Background="{TemplateBinding Background}">
                <Border x:Name="InnerBorder" BorderThickness="1"
						CornerRadius="{StaticResource SliderHandInnerBorder_CornerRadius}"
						BorderBrush="{StaticResource SliderHandInnerBorder_Normal}" />
            </Border>
            <Path x:Name="Path"
                  Fill="{StaticResource ControlElement_Normal}" 
                  Stretch="Fill" 
                  HorizontalAlignment="Center"
                  VerticalAlignment="Center" 
                  Width="2" Height="9" 
                  Data="M0,0 L0,8 8,8 8,0 z" 
                  
                  SnapsToDevicePixels="True" 
                   />
        </Grid>
        
        <ControlTemplate.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter TargetName="Path" Property="Fill" Value="{StaticResource ControlElement_MouseOver}" />
                <Setter TargetName="Border" Property="BorderBrush" Value="{StaticResource ControlOuterBorderVertical_MouseOver}" />
                <Setter TargetName="Border" Property="Background" Value="{StaticResource ControlBackgroundVertical_MouseOver}" />
                <Setter TargetName="InnerBorder" Property="BorderBrush" Value="{StaticResource ControlInnerBorderVertical_MouseOver}" />
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
                <Setter TargetName="Path" Property="Fill" Value="{StaticResource ControlElement_Pressed}" />
                <Setter TargetName="Border" Property="BorderBrush" Value="{StaticResource ControlOuterBorderVertical_Pressed}" />
                <Setter TargetName="Border" Property="Background" Value="{StaticResource ControlBackgroundVertical_Pressed}" />
                <Setter TargetName="InnerBorder" Property="BorderBrush" Value="{StaticResource ControlInnerBorderVertical_Pressed}" />
            </Trigger>
        </ControlTemplate.Triggers>
        
    </ControlTemplate>

    <ControlTemplate TargetType="RepeatButton" x:Key="IncreaseHandleRepeatButton">
        <Grid x:Name="Root">
            
            <Border x:Name="Border" 
					CornerRadius="{StaticResource SliderHandOuterBorder_CornerRadius}"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="{TemplateBinding BorderThickness}"
                    Background="{TemplateBinding Background}">
                <Border x:Name="InnerBorder" BorderThickness="1"
						CornerRadius="{StaticResource SliderHandInnerBorder_CornerRadius}"
						BorderBrush="{StaticResource SliderHandInnerBorder_Normal}" />
            </Border>
            <Path x:Name="Path"
                  Fill="{StaticResource ControlElement_Normal}" 
                  Stretch="Fill" 
                  HorizontalAlignment="Center"
                  VerticalAlignment="Center" 
                  Width="9" Height="9"
                  Data="M3,0 L5,0 5,3 8,3 8,5 5,5 5,8 3,8 3,5 0,5 0,3 3,3 z" 
                  
                  SnapsToDevicePixels="True"
                  
                />
        </Grid>
        
        <ControlTemplate.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter TargetName="Path" Property="Fill" Value="{StaticResource ControlElement_MouseOver}" />
                <Setter TargetName="Border" Property="BorderBrush" Value="{StaticResource ControlOuterBorderVertical_MouseOver}" />
                <Setter TargetName="Border" Property="Background" Value="{StaticResource ControlBackgroundVertical_MouseOver}" />
                <Setter TargetName="InnerBorder" Property="BorderBrush" Value="{StaticResource ControlInnerBorderVertical_MouseOver}" />
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
                <Setter TargetName="Path" Property="Fill" Value="{StaticResource ControlElement_Pressed}" />
                <Setter TargetName="Border" Property="BorderBrush" Value="{StaticResource ControlOuterBorderVertical_Pressed}" />
                <Setter TargetName="Border" Property="Background" Value="{StaticResource ControlBackgroundVertical_Pressed}" />
                <Setter TargetName="InnerBorder" Property="BorderBrush"	Value="{StaticResource ControlInnerBorderVertical_Pressed}" />
            </Trigger>
        </ControlTemplate.Triggers>
        
    </ControlTemplate>

    <Style x:Key="HandleStyle" TargetType="RepeatButton">
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="BorderBrush" Value="{StaticResource SliderHandOuterBorder_Normal}" />
        <Setter Property="Background" Value="{StaticResource  SliderHandBackground_Normal}" />
        <Setter Property="Width" Value="{StaticResource SliderButtonWidth}" />
        <Setter Property="Height" Value="{StaticResource SliderButtonHeight}" />
        <Setter Property="Margin" Value="{StaticResource SliderButtonMargin}" />
        <Setter Property="Opacity" Value="0.8" />
        <Setter Property="RenderTransformOrigin" Value="0.5,0.5" />
        <Setter Property="RenderTransform">
            <Setter.Value>
                <ScaleTransform ScaleX="-1" ScaleY="1" />
            </Setter.Value>
        </Setter>
    </Style>

