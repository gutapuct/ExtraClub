		 >
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="maps:MapLegendCanvasItem">
					<Canvas>
						<TextBlock x:Name="PART_MinLabel" Text="{TemplateBinding Min}" />
						<TextBlock x:Name="PART_MaxLabel" Text="{TemplateBinding Max}" />
						<Rectangle x:Name="PART_Rectangle" 
								   Width="{TemplateBinding MarkerWidth}" 
								   Height="{TemplateBinding MarkerHeight}" 
								   RadiusX="{TemplateBinding RadiusX}" 
								   RadiusY="{TemplateBinding RadiusY}" 
								   Fill="{TemplateBinding Fill}"
								   Stroke="{TemplateBinding Stroke}"
								   StrokeThickness="{TemplateBinding StrokeThickness}"/>
					</Canvas>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>
	
	<Style TargetType="maps:MapLegend"
		
		x:Key="{telerikControls:ThemeResourceKey ThemeType=
		external:SummerThemeExternal , ElementType=maps:MapLegend}"
		 >
        <Setter Property="Background" Value="#ABFFFFFF" />
        <Setter Property="BorderBrush" Value="#FFFFFFFF" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Padding" Value="12,10" />
        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
        <Setter Property="VerticalContentAlignment" Value="Stretch" />
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="maps:MapLegend">
					<Border Background="{TemplateBinding Background}"
							BorderBrush="{TemplateBinding BorderBrush}"
							BorderThickness="{TemplateBinding BorderThickness}">
                        <Grid Margin="{TemplateBinding Padding}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <ContentControl x:Name="PART_HeaderContentControl"
                                            Foreground="{TemplateBinding Foreground}" 
                                            Content="{TemplateBinding Header}" 
                                            ContentTemplate="{TemplateBinding HeaderTemplate}"/>
                            <ItemsPresenter Grid.Row="1"
                                            HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                            VerticalAlignment="{TemplateBinding VerticalContentAlignment}" />
                        </Grid>
					</Border>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
		<Setter Property="ItemsPanel">
			<Setter.Value>
				<ItemsPanelTemplate>
					<maps:MapLegendCanvas />
				</ItemsPanelTemplate>
			</Setter.Value>
		</Setter>
	</Style>
	
	<DataTemplate x:Key="MapShapeDataTemplate">
		<Canvas x:Name="PART_ShapeCanvas" />
	</DataTemplate>

	
    
</ResourceDictionary>
