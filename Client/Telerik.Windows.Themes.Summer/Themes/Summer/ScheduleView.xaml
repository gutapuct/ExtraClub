					<ToolTipService.ToolTip>
						<ToolTip telerik:LocalizationManager.ResourceKey="EditRecurrence" telerik:StyleManager.Theme="{StaticResource Theme}" />
					</ToolTipService.ToolTip>
					<StackPanel Orientation="Horizontal" Margin="2 0">
