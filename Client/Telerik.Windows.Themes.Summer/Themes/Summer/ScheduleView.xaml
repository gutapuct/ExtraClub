			<telerik:RadToolBar x:Name="AppointmentToolbar" FocusManager.IsFocusScope="False"  GripVisibility="Collapsed" Grid.Row="0" Margin="-1 -1 -1 3" telerik:StyleManager.Theme="{StaticResource Theme}">
